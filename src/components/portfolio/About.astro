---
import Badge from "@/components/Badge.astro"
import Divider from "@/components/Divider.astro"
import SocialPill from "@/components/SocialPill.astro"
import Binoculars from "@/icons/Binoculars.astro"
import Chat from "@/icons/Chat.astro"
import Check from "@/icons/Check.astro"
import GitHub from "@/icons/GitHub.astro"
import LinkedIn from "@/icons/LinkedIn.astro"
import { getI18N } from "@/locales/index"
import PhotographyCard from "../PhotographyCard.astro"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<div class="flex w-full max-w-4xl flex-col sm:w-11/12 md:w-8/12">
	<div class="flex w-full flex-row items-center gap-4">
		<a
			id="img-container"
			href="https://rixel.dev/portfolio"
			rel="noopener noreferrer"
			class="group relative size-20 overflow-hidden rounded-full shadow-lg shadow-black/60 ring-2 ring-accent/20 transition-all duration-300 ease-in-out sm:size-36 sm:hover:scale-105 sm:hover:shadow-xl sm:hover:shadow-accent/20 sm:hover:ring-accent/40"
		>
			<img
				src="https://rixel.dev/images/main-pic.webp"
				class="scale-105 object-cover transition duration-300 ease-in-out active:group-hover:scale-100 sm:group-hover:scale-100"
				height="1200"
				width="630"
				alt="Rikelvi Capellán portfolio picture"
			/>
			<div
				class="absolute inset-0 bg-gradient-to-br from-accent/10 via-transparent to-primary/10 opacity-0 transition-opacity duration-300 sm:group-hover:opacity-100"
			>
			</div>
		</a>

		<div class="flex flex-col items-start gap-2">
			<h1
				class="bg-gradient-to-r from-slate-200 to-slate-400 bg-clip-text text-3xl font-bold text-transparent sm:text-4xl md:text-5xl"
			>
				Rikelvi Capellán
			</h1>
			<h3 class="text-md font-semibold text-slate-300 sm:text-xl">
				{i18n.ABOUT_TEXT_1}
			</h3>

			<a
				href="https://www.linkedin.com/in/rixeldev/"
				target="_blank"
				rel="noopener noreferrer"
				class="group/badge"
			>
				<Badge>
					<Check
						class="mr-2 h-5 w-5 text-accent transition-transform duration-300 group-hover/badge:scale-110"
					/>
					<h5 class="font-bold text-accent">{i18n.AVAILABLE}</h5>
				</Badge>
			</a>
		</div>
	</div>

	<Divider />

	<div class="flex w-full flex-col items-center">
		<div
			class="relative w-full rounded-2xl bg-gradient-to-br from-primary/5 via-accent/5 to-primary/10 p-6 backdrop-blur-sm sm:p-8"
		>
			<h3 class="text-md font-semibold leading-relaxed text-primary sm:text-balance sm:text-xl">
				{i18n.ABOUT_TEXT_2}
				<strong class="font-bold text-accent">{i18n.ABOUT_TEXT_3}</strong>
				{i18n.ABOUT_TEXT_6}
				<strong class="font-bold text-accent">{i18n.ABOUT_TEXT_4}</strong>
				{i18n.FOOTER_TXT_2}
				<strong class="font-bold text-accent">{i18n.ABOUT_TEXT_5}</strong>
				{i18n.ABOUT_TEXT_6}
				<strong class="font-bold text-accent">{i18n.ABOUT_TEXT_7}</strong>
				{i18n.ABOUT_TEXT_8}
			</h3>
		</div>

		<nav class="mb-2 mt-8 flex w-full flex-wrap gap-3">
			<SocialPill
				target="_blank"
				rel="noopener noreferrer"
				href="https://www.linkedin.com/in/rixeldev/"
			>
				<LinkedIn class="size-6" />
				LinkedIn
			</SocialPill>

			<SocialPill target="_blank" rel="noopener noreferrer" href="https://github.com/rixeldev">
				<GitHub class="size-5" />
				GitHub
			</SocialPill>

			<SocialPill
				target="_blank"
				rel="noopener noreferrer"
				href="https://www.rixel.dev/archives/web-cv.pdf"
			>
				<Binoculars class="size-6" />
				{i18n.WATCH_CV}
			</SocialPill>

			<SocialPill href="#contact">
				<Chat class="size-5" />
				{i18n.CONTACT}
			</SocialPill>
		</nav>

		<Divider />
	</div>

	<div class="flex w-full flex-col items-center">
		<PhotographyCard />
	</div>
</div>
