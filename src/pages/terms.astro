---
import { getActiveLocale, getI18N, resolveLocalizedPath } from "@/languages/index"
import Layout from "@/layouts/Layout.astro"

const locale = getActiveLocale(Astro)
const i18n = getI18N({ currentLocale: locale })
---

<Layout
	title={`${i18n.TERMS} - Capelix`}
	description={i18n.TERMS_PAGE_DESCRIPTION}
	canonical={new URL(resolveLocalizedPath('/terms/', locale), 'https://capelix.dev').toString()}
>
	<section class='section flex min-h-[40vh] items-center justify-center px-4 py-24 sm:px-6 lg:px-8'>
		<p class='text-center text-lg text-primary dark:text-slate-200'>{i18n.TERMS_UNAVAILABLE}</p>
	</section>
</Layout>
