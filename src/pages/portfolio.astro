---
import About from "@/components/portfolio/About.astro"
import Experience from "@/components/portfolio/Experience.astro"
import Projects from "@/components/portfolio/Projects.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import type { Preload } from "@/interfaces/preload"
import { getActiveLocale, getI18N, resolveLocalizedPath } from "@/locales/index"
import Layout from "../layouts/Layout.astro"

const locale = getActiveLocale(Astro)
const i18n = getI18N({ currentLocale: locale })
const preloadImages: Preload[] = [
	{
		as: "image",
		href: `https://rixel.dev/projects/el-chevere.webp`,
		type: "image/webp",
		rel: "preload",
	},
	{
		as: "image",
		href: `https://rixel.dev/projects/anjocc.webp`,
		type: "image/webp",
		rel: "preload",
	},
	{
		as: "image",
		href: `https://rixel.dev/projects/gdn-pro.webp`,
		type: "image/webp",
		rel: "preload",
	},
	{
		as: "image",
		href: `https://rixel.dev/projects/stop-trivia.webp`,
		type: "image/webp",
		rel: "preload",
	},
]
---

<Layout
	title={`${i18n.ABOUT_TEXT_1} - Rikelvi CapellÃ¡n`}
	description={i18n.PORTFOLIO_PAGE_DESCRIPTION}
	canonical={new URL(resolveLocalizedPath("/portfolio/", locale), "https://rixel.dev").toString()}
	preload={preloadImages}
>
	<SectionContainer id="about">
		<About />
	</SectionContainer>

	<SectionContainer id="experience">
		<Experience />
	</SectionContainer>

	<SectionContainer id="projects">
		<Projects />
	</SectionContainer>
</Layout>
