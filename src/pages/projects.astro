---
import { getActiveLocale, getI18N, resolveLocalizedPath } from "@/languages/index"
import Layout from "@/layouts/Layout.astro"

const locale = getActiveLocale(Astro)
const i18n = getI18N({ currentLocale: locale })
---

<Layout
	title={`${i18n.PROJECTS} - Capelix`}
	description={i18n.PROJECTS_PAGE_DESCRIPTION}
	canonical={new URL(resolveLocalizedPath('/projects/', locale), 'https://capelix.dev').toString()}
/>
